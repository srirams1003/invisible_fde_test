# Banking REST Service - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=sqlite:///./banking.db

# Security Configuration
# IMPORTANT: Change this to a secure random string in production
SECRET_KEY=your-secure-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Optional: Database Configuration for Production
# DATABASE_URL=postgresql://username:password@localhost:5432/banking_db

# Optional: Redis Configuration for Production
# REDIS_URL=redis://localhost:6379/0

# Optional: Email Configuration for Production
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=logs/banking.log

# Optional: Rate Limiting
# RATE_LIMIT_PER_MINUTE=60

# Optional: CORS Configuration
# CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"\]
